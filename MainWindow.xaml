<Window x:Class="MetaStockConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:MetaStockConverter"
        Title="MetaStock to CSV Converter" Height="640" Width="900" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <conv:BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <conv:InverseBooleanConverter x:Key="InverseBool"/>
    </Window.Resources>
    <Grid Background="#FFF6F6F6" Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="MetaStock to CSV Converter" FontSize="24" FontWeight="SemiBold"/>
            <TextBlock Text="Convert MetaStock data files to CSV format" Foreground="#666"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,12">
            <GroupBox Header="Input Folder (MetaStock Data)" Margin="0,0,0,8">
                <DockPanel Margin="8">
                    <TextBox x:Name="InputFolderText" Margin="0,0,8,0" Height="32" VerticalAlignment="Center"/>
                    <Button x:Name="BrowseInputButton" Content="Browse..." Width="120" Height="32" Click="BrowseInput_Click"/>
                </DockPanel>
            </GroupBox>
            <GroupBox Header="Output Folder (CSV Files)">
                <DockPanel Margin="8">
                    <TextBox x:Name="OutputFolderText" Margin="0,0,8,0" Height="32" VerticalAlignment="Center"/>
                    <Button x:Name="BrowseOutputButton" Content="Browse..." Width="120" Height="32" Click="BrowseOutput_Click"/>
                </DockPanel>
            </GroupBox>
        </StackPanel>

        <GroupBox Grid.Row="2" Header="Options" Margin="0,0,0,12">
            <StackPanel Margin="8">
                <CheckBox x:Name="OmitAnomaliesCheck" Content="Omit anomalies (default)" IsChecked="True"/>
                <CheckBox x:Name="InterpolateCheck" Content="Interpolate anomalies (linear or previous-value carry-forward)"/>
                <CheckBox x:Name="DetailedLogCheck" Content="Detailed log mode"/>
                <CheckBox x:Name="IncludeOpenInterestCheck" Content="Include OpenInterest column (if present)"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Grid.Row="3" Header="Log" Margin="0,0,0,12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                    <TextBox x:Name="LogTextBox" TextWrapping="Wrap" IsReadOnly="True" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Text="{Binding LogText}"/>
                </ScrollViewer>
                <ProgressBar x:Name="Progress" Grid.Row="1" Height="16" Margin="8,6,8,8" IsIndeterminate="True" Visibility="{Binding IsConverting, Converter={StaticResource BoolToVis}}"/>
            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="ExitButton" Content="Exit" Width="120" Height="36" Click="Exit_Click" Margin="0,0,8,0"/>
            <Button x:Name="CancelButton" Content="Cancel" Width="120" Height="36" Click="Cancel_Click" IsEnabled="{Binding IsConverting}" Margin="0,0,8,0"/>
            <Button x:Name="ConvertButton" Content="Convert to CSV" Width="160" Height="36" Click="Convert_Click" IsEnabled="{Binding IsConverting, Converter={StaticResource InverseBool}}"/>
        </StackPanel>
    </Grid>
</Window>

